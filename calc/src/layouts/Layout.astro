---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
}

const { title = "OD Calculator" } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="title" content={title} />
    <ViewTransitions />
	</head>
	<body>
		<main>
			<div class="container mx-auto p-2 font-sans antialiased">
	      <slot />
			</div>
		</main>
	</body>
</html>
